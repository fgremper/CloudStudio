<div id="header">
	<div id="headerText">
		<div id="login">
			Logged in as: <strong><%= login.username %></strong>
			<% if (login.isAdmin) { %>(Administrator) &nbsp;|&nbsp; <span id="manageUsers">Manage users</span><% } %>
		</div>
		<span id="logo">RTCA Web Interface</span>
	</div>
</div>
<div id="title">
    <div id="titleText">
    	<span id="refresh">&#8635;</span>
    	<strong>User management</strong>
    </div>
</div>
<div id="view">
	<table>
	    <tr class="descriptors"><th>Username</th><th>Administrator</th><th>Can create repositories</th></tr>
	    <tr class="heading"><td colspan="3">Users (<%= users.length %>)</td></tr>
		<% for (var i = 0; i < users.length; i++) { %>
		    <tr class="static" data-alias="<%= users[i]['username'] %>">
		        <td><span class="user"><%= users[i]['username'] %> <span class="delete deleteUser" data-username="<%= users[i]['username'] %>">(&#8722;)</span></span></td>
		        <td>
		        	<% if (users[i]['isAdmin']) { %>
	        			<strong>Yes</strong>
	        			<span class="modify revokeUserAdmin" data-username="<%= users[i]['username'] %>">(toggle)</span>
        			<% } else { %>
        				No
	        			<span class="modify makeUserAdmin" data-username="<%= users[i]['username'] %>">(toggle)</span>
    				<% } %>
				</td>
		        <td>
		        	<% if (users[i]['isCreator']) { %>
	        			<strong>Yes</strong>
	        			<span class="modify revokeUserCreator" data-username="<%= users[i]['username'] %>">(toggle)</span>
        			<% } else { %>
        				No
	        			<span class="modify makeUserCreator" data-username="<%= users[i]['username'] %>">(toggle)</span>
    				<% } %>
				</td>
		    </tr>
		<% } %>
	</table>
</div>
